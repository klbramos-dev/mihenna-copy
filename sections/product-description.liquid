{% if product.description != blank %}
  {%- if section.settings.wave_top_image -%}
    <div class="image-with-text__waveImage image-with-text__waveImage--topImageWave">
      {% render 'wave-image', color: section.settings.svg_color %}
    </div>
  {%- endif -%}
  <div class="product-description-wrap section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
    <div class="page-width">
      <div class="product-description-content">
        {{ product.description }}
      </div>
    </div>
  </div>
{% endif %}

<style>
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media (max-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
</style>

{% schema %}
  {
    "name": "Product Description",
    "settings": [
      {
        "type": "checkbox",
        "id": "wave_top_image",
        "default": false,
        "label": "t:sections.image-with-text.settings.wave_top_image.label"
      },
      {
        "type": "color",
        "id": "svg_color",
        "label": "t:sections.image-with-text.settings.wave_color.label",
        "default": "#FFFFFF"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "info": "t:sections.all.colors.has_cards_info",
        "default": "background-1"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 32
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 72
      },
      {
        "type": "range",
        "id": "mobile_padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.mobile_padding_top",
        "default": 40
      },
      {
        "type": "range",
        "id": "mobile_padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:sections.all.padding.mobile_padding_bottom",
        "default": 52
      }
    ], 
    "presets": [
      {
        "name": "Product Description"
      }
    ]
  }
{% endschema %}