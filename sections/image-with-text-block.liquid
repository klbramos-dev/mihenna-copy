<div class="image-with-text-block section-{{ section.id }}-padding">
  <div class="image-with-text-block__container page-width">
    <div class="image-with-text-block__centerSection image-with-text-block__centerSection--mobile">
      {% if section.settings.block_image != blank %}
        <div class="image-with-text-block__imageWrap">
          <div class="image-with-text-block__imageWrap--image">
            <img src="{{ section.settings.block_image | img_url: 'master' }}" alt="{{ section.settings.block_image.alt }}" width="100" height="100" loading="lazy">
          </div>
        </div>
      {% endif %}
    </div>
    {% if section.settings.heading != blank or section.settings.content != blank %}
      <div class="image-with-text-block__headingWrap homepage_beautiful_wrap">
        {% if section.settings.heading != blank %}
          <h2 class="rich-text__heading rte inline-richtext h1">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        {% if section.settings.content != blank %}
          <div class="rich-text__text rte">
            {{ section.settings.content }}
          </div>
        {% endif %}
      </div>
    {% endif %}
    <div class="image-with-text-block__body">
      <div class="image-with-text-block__leftSection image-with-text-block__leftSection--leftPart">
        {%- for block in section.blocks -%}
          {%- if block.type == "left" -%}
            <div class="image-with-text-block__contentWrap">
              <div class="image-with-text-block__iconSection">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: 'master' }}" class="image-block-image-icon" alt="{{ block.settings.image.alt }}" width="100%" height="100%" loading="lazy">
                {% endif %}
              </div>
              {% if block.settings.content != blank %}
                <div class="image-with-text-block__contentSection">
                  {{ block.settings.content }}
                </div>
              {% endif %}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <div class="image-with-text-block__centerSection image-with-text-block__centerSection--desktop">
        {% if section.settings.block_image != blank %}
          <div class="image-with-text-block__imageWrap">
            <div class="image-with-text-block__imageWrap--image">
              <img src="{{ section.settings.block_image | img_url: 'master' }}" alt="{{ section.settings.block_image.alt }}" width="100" height="100" loading="lazy">
            </div>
          </div>
        {% endif %}
      </div>
      <div class="image-with-text-block__leftSection image-with-text-block__leftSection--rightPart">
        {%- for block in section.blocks -%}
          {%- if block.type == "right" -%}
            <div class="image-with-text-block__contentWrap">
              <div class="image-with-text-block__iconSection">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: 'master' }}" class="image-block-image-icon" alt="{{ block.settings.image.alt }}" width="100%" height="100%" loading="lazy">
                {% endif %}
              </div>
              {% if block.settings.content != blank %}
                <div class="image-with-text-block__contentSection">
                  {{ block.settings.content }}
                </div>
              {% endif %}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<style>
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media (max-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.image_with_text_block.name",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.image_with_text_block.settings.heading.label"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "t:sections.image_with_text_block.settings.content.label"
    },
    {
      "type": "image_picker",
      "id": "block_image",
      "label": "t:sections.image_with_text_block.settings.block_image.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 84
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 84
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.mobile_padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.mobile_padding_bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "left",
      "name": "t:sections.image_with_text_block.blocks.left.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.image_with_text_block.blocks.left.settings.image.label"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "t:sections.image_with_text_block.blocks.left.settings.content.label"
        }
      ]
    },
    {
      "type": "right",
      "name": "Right Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.image_with_text_block.blocks.left.settings.image.label"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "t:sections.image_with_text_block.blocks.left.settings.content.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text Block"
    }
  ]
}
{% endschema %}