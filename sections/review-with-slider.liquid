<div class="review-with-slider section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="review-slider-container page-width">
    <div class="review-slider-heading">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="review-card swiper-mobile-slider">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
            <div class="review-inner-card swiper-slide">
              <div class="review-product-details">
                <div class="review-product-image">
                  <ul class="review-rating-star">
                    {% render 'review-stars' %}
                  </ul>
                </div>
                <div class="review-product-data">
                  <div class="review-product-star">
                    <p class="review-content">{{ block.settings.review_content }}</p>
                    <h3 class="review-name">{{ block.settings.review_name }}</h3>
                    <p class="review-designation">{{ block.settings.review_designation }}</p>
                  </div>
                </div>
              </div>
            </div>
        {%- endfor -%}
      </div>
      <div class="swiper-controls">
        
      </div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</div>

<style>
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media (max-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    }
  }
</style>

<script>
  var logoListSlider = new Swiper('.swiper-mobile-slider', {
    loop: false,
    slidesPerView: 2,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },  
    pagination: {
      el: '.swiper-pagination',
      clickable: true
    },
    breakpoints: {
      280: {
        slidesPerView: 1,
        spaceBetween: 20
      },
      992: {
        slidesPerView: 2,
        spaceBetween: 80
      }
    }
  });
</script>

{% schema %}
{
  "name": "Review with Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 84
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 84
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.mobile_padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.mobile_padding_bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "review_content",
          "label": "Review Content"
        },
        {
          "type": "text",
          "id": "review_name",
          "label": "Review Name"
        },
        {
          "type": "text",
          "id": "review_designation",
          "label": "Review Designation"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review with Slider"
    }
  ]
}
{% endschema %}